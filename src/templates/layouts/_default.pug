include ../mixins/_all
include ../mixins/_section

block vars
  - title = 'AGL'
  - description = 'AGL'
  - keywords = 'AGL'
  - og_title = 'AGL'
  - url = ''
  - pageID = ''
  - path = '.'

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content=description)
    meta(name='keywords', content=keywords)
    meta(property='og:title', content=og_title)
    meta(property='og:url', content=url)
    meta(property='og:image', content=path + '/assets/images/common/logo/agl-logo.png')
    meta(property='og:description', content=description)
    meta(property='og:type', content='website')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
    link(href='https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap', rel='stylesheet')
    link(rel='stylesheet', href=path + '/assets/css/styles.css')
    link(rel='icon', type='image/png', href=path + '/assets/images/common/logo/agl-logo.png', sizes='16x16')
    title= title
  body(id=pageID)
    .wrapper--full-width
      .grid__container
        //- include ../partials/_header
        include ../partials/_sidebar
        main#main-content.content(role='main')
          block container
      include ../partials/_footer
  script(src=path + '/assets/js/main.js', type='module', defer)
  block scripts
