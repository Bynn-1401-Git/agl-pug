mixin NavigationList(items)
  ul.navigation
    each item in items.length ? items : ['There are no items']
      li.navigation-item
        a.item-title(href=item.link, target='_self', title=item.title)= item.title
        if item.icon !== undefined && item.icon !== ''
          span.item-icon
            img(src=item.icon, alt=item.title)
