mixin PriInput(label, type, name, placeholder)
  if type == 'password'
    .pri-input
      label(for=name)= label
      .box-input
        input.style-input(type=type, name=name, placeholder=placeholder)
        .show-pass
  else if type == 'search'
    .pri-input
      label(for=name)= label
      .box-input
        input.style-input(type='text', name=name, placeholder=placeholder)
        .search
  else if type === 'date'
    .pri-input
      label(for=name)= label
      .box-input
        input#date.style-input(type=type, name=name, placeholder=placeholder)
        .date
  else
    .pri-input
      label(for=name)= label
      input.style-input(type=type, name=name, placeholder=placeholder)

